@model IEnumerable<Turnos.Models.Especialidad>

<p>
    <a asp-action="Create">Nuevo</a>
</p>
<table border="1" style=”width: 100%”>
    <colgroup>
        <col style="width: 1%" />
        <col style="width: 1%" />
        <col style="width: 1%" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
        </tr>
    </thead>
    <tbody>
        @*Aqui colocaremos, mas adelante para pmodtrar registro de la base de datos*@
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdEspecialidad"> Editar </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.IdEspecialidad"> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>