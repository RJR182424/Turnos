@model Turnos.Models.Especialidad
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>

<body>

    <h4>Medico</h4>
    <hr />
    <div class="row">
        <div>
            <form class="col s12" asp-action="Edit">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for=IdEspecialidad />
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Descripcion" type="text" class="validate">
                        <label asp-for="Descripcion">@Html.DisplayNameFor(model => model.Descripcion)</label>
                        <span asp-validation-for="Descripcion"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Modificar
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s6 m6">
                        <a asp-action="Index" class="waves-effect waves-light btn grey darken-3"><i
                                class="material-icons left">undo</i>Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
